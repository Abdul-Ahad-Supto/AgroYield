# AgroYield Environment Variables
# Copy this file to .env and fill in your values

# Blockchain Configuration
PRIVATE_KEY=your_private_key_here_without_0x_prefix
POLYGONSCAN_API_KEY=your_polygonscan_api_key
AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# Optional: For gas reporting
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Network Configuration
REACT_APP_NETWORK_NAME=amoy
REACT_APP_CHAIN_ID=80002
REACT_APP_RPC_URL=https://80002.rpc.thirdweb.com
REACT_APP_EXPLORER_URL=https://amoy.polygonscan.com

# Contract Addresses (will be updated after deployment)
REACT_APP_PROJECT_FACTORY=your_project_factory_address
REACT_APP_INVESTMENT_MANAGER=your_investment_manager_address
REACT_APP_YIELD_DISTRIBUTOR=your_yield_distributor_address
REACT_APP_GOVERNANCE_MODULE=your_governance_module_address
REACT_APP_USDC_ADDRESS=0x41E94Eb019C0762f9Bfcf9Fb1E58725BfB0e7582

# IPFS Configuration (Pinata)
REACT_APP_PINATA_API_KEY=your_pinata_api_key
REACT_APP_PINATA_SECRET_KEY=your_pinata_secret_key
REACT_APP_PINATA_JWT=your_pinata_jwt_token

# IPFS Gateways (Optional - for fallbacks)
REACT_APP_IPFS_GATEWAY_1=https://w3s.link/ipfs/
REACT_APP_IPFS_GATEWAY_2=https://ipfs.io/ipfs/
REACT_APP_IPFS_GATEWAY_3=https://cloudflare-ipfs.com/ipfs/

# App Configuration
REACT_APP_APP_NAME="AgroYield"
REACT_APP_APP_VERSION="2.0.0"